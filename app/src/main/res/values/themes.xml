<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TheMovieDBApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_700</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_700</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/gray</item>
        <item name="toolbarStyle">@style/Theme.MovieDBApp.Toolbar</item>
        <item name="drawerArrowStyle">@style/Theme.Imagine.Toolbar.DrawerArrowToggle</item>
    </style>

    <!-- Toolbar -->
    <style name="Theme.MovieDBApp.Toolbar" parent="Widget.MaterialComponents.Toolbar.Primary">
        <item name="titleTextColor">@color/white</item>
        <item name="colorOnPrimary">@color/gray</item>
        <item name="colorControlNormal">@color/gray</item>
        <item name="colorButtonNormal">@color/gray</item>
    </style>

    <style name="Theme.Imagine.Toolbar.DrawerArrowToggle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@color/white</item>
    </style>

</resources>